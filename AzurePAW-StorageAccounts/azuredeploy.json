{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {

   
    "storageAccountType": {
      "type": "string",
      "defaultValue": "Standard_RAGRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_GRS",
        "Standard_ZRS",
        "Premium_LRS",
        "Standard_RAGRS"
      ],
      "metadata": {
        "description": "Storage Account type"
      }
    }
  },
  "variables": {

    "vmdiagsa": "[concat('saaddsusscvmdiagsm', uniqueString(resourceGroup().id))]",
    "vmdiagsa24": "[substring(concat(variables('vmdiagsa')),0,24)]",
    "vmDiagSAName": "[toLower(variables('vmdiagsa24'))]",

    "networksa": "[concat('saaddsusscnetworksm', uniqueString(resourceGroup().id))]",
    "networksa24": "[substring(concat(variables('networksa')),0,24)]",
    "networkSAName": "[toLower(variables('networksa24'))]"

  },
  "resources": [

    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[variables('vmDiagSAName')]",
      "apiVersion": "2018-07-01",
      "location": "[resourceGroup().location]",
      "dependsOn": [],
      "sku": {
        "name": "[parameters('storageAccountType')]"
      },
      "kind": "StorageV2",
      "properties": {
        "supportsHttpsTrafficOnly": true,
        "accessTier": "Hot"
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[variables('networkSAName')]",
      "apiVersion": "2018-07-01",
      "location": "[resourceGroup().location]",
      "dependsOn": [],
      "sku": {
        "name": "[parameters('storageAccountType')]"
      },
      "kind": "StorageV2",
      "properties": {
        "supportsHttpsTrafficOnly": true,
        "accessTier": "Hot"
      }
    }

  ],
  "outputs": {}
}
